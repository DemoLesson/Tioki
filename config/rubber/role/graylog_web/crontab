<%
  @read_cmd = 'crontab -l'
  @write_cmd = 'crontab -'
  @additive = ['# start-graylog-web-crontab', '# end-graylog-web-crontab']
%>

# use sudo/bash to unset bundle env vars since we are running a different
# rails app and redirect output to null to prevent bash-login from complaining about tty
*/5 * * * * sudo -u root bash -l -c "cd <%= rubber_env.graylog_web_dir %> && bundle exec rake subscriptions:send" &> /dev/null
*/5 * * * * sudo -u root bash -l -c "cd <%= rubber_env.graylog_web_dir %> && bundle exec rake streamalarms:send" &> /dev/null
