	<div id="page-wrapper" class="<%= "logged-in" unless self.current_user.nil? %>">
		<% if self.current_user.nil? %>
			<section id="login-drawer" class="wrapper">
				<div class="drawer-wrapper inner-content">
					<a href="#" id="close-drawer">
					Close
					</a>
					<%= form_tag :controller => 'users', :action=> "login" do %>
						<%= email_field "user", "email", :placeholder => "Email" %>
						<%= password_field "user", "password", :placeholder => "Password" %>
						<%= submit_tag "Login", :class => "button primary-button" %>
						<%= link_to 'Forgot my password', :forgot_password, :class => "forgot-password" %>
					<% end %>
				</div>
			</section>
		<% end %>

		<section class="login-header wrapper">
			<header class="inner-content">
				<a href="/">
					<div class="logo">
					Tioki
					</div>
				</a>
				<% if self.current_user.nil? %>
					<a href="#" id="drawer-handle" class="button">
					Login
					</a>
				<% else %>
					<div id="user-actions">
						<ul>
							<li class="user-name">
								<a href="/me/profile">
								<%= self.current_user.name %>
								<div class="gear">
								</div>
								</a>
								
								<ul>
									<!-- Admin Methods -->
									<% if self.current_user.is_admin? && !self.current_user.is_limited %>
										<li><%= link_to 'Manage Users', '/accounts/'+self.current_user.id.to_s %></li>
									<% elsif self.current_user.is_admin? %>
										<li><%= link_to 'Account allowances', '/accounts/'+self.current_user.id.to_s %></li>
									<% end %>

									<!-- Schools -->

									<!-- All -->
									<li>
										<a href="/me/settings">
										Account Settings
										</a> 
									</li>

									<!-- Teacher Methods -->
									<% unless self.current_user.teacher.nil? %>
										<li>
											<a href="/me/settings/privacy">
											Privacy Settings
											</a> 
										</li>
										<li>
											<a href="/me/profile/edit">
											Edit Profile
											</a>
										</li>
									<% end %>

									<!-- Logout -->
									<li>
										<a href="/logout">
										Logout
										</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				<% end %>
			</header>
		</section>
		<% unless self.current_user.nil? %>
			<nav class="wrapper top-nav">
				<ul class="inner-content">
					<li class="searchBox">
						<form style="margin:0px;" action="/connections">
							<input type="text" name="connectsearch" value="<%= params[:connectsearch] %>" placeholder="Search Connections" />
						</form>
					</li>
					<li>
						<a href="/">
						Home
						</a>
					</li>
					<% if self.current_user.teacher %>
						<li>
							<a href="/me/profile">
							Profile
							</a>
							<ul>
								<li><a href="/me/profile/edit">Edit My Profile</a></li>
								<li><a href="/me/profile/stats">Profile Stats</a></li>
							</ul>
						</li>
						<li>
							<a href="/my_connections">
							Connections
							</a>
							<ul>
								<li><a href="/pending_connections">Pending Connections</a></li>
								<li><a href="/inviteconnections">Invite Connections</a></li>
							</ul>
						</li>
						<li>
							<a href="/events">
							Events
							</a>
							<ul>
								<li><a href="/events/new">Submit an Event</a></li>
							</ul>
						</li>
						<li>
							<a href="/jobs">
							Jobs
							</a>
							<ul>
								<li><a href="/teacher_applications">My Applications</a></li>
							</ul>
						</li>
						<li>
							<a href="/messages">
							<%= "Inbox [" + unread_messages.to_s + "]" %>
							</a>
						</li>
					<% elsif self.current_user.is_admin? %>
						<li>
							<%= link_to "My Schools", "/my_schools" %>
						</li>
						<li>
							<%= link_to "My Favorites", "/favorites" %>
						</li>
						<li>
							<a href="/events">
							Events
							</a>
						</li>
						<li>
							<%= link_to "My Jobs", :my_jobs %>
						</li>
						<li>
							<a href="/messages">
							Inbox
							</a>
						</li>
					<% end %>
				</ul>
			</nav><!-- End Nav -->
		<% end %>
		<!-- Display Notices -->
		<% flash.each do |type, message| %>
			<% next unless message.is_a?(String) %>
			<section class="notice <%= type %>">
				<%= message %>
			</section>
		<% end unless flash.empty? %>
		
