
<!DOCTYPE html>
<html>
	<head>
		<title>Tioki</title>
		<%= javascript_include_tag "application" %>
		<%= stylesheet_link_tag "application" %>

		<%= csrf_meta_tags %>
		<script type="text/javascript" src="/card-assets/jquery.foundation.reveal.js"></script>
		<!-- Token Input -->
		<script type="text/javascript" src="/uncompiled/tokeninput/src/jquery.tokeninput.js"></script>
		<link type="text/css" rel="stylesheet" href="/uncompiled/tokeninput/styles/token-input-facebook.css" />
		<!-- END Token Input -->
		<meta name="description" content="DemoLesson is an online hiring platform for teachers.  Teaching jobs and education jobs are posted by schools coast to coast.  Teachers can make digital profiles with video and uploads." />
		<meta name="google-site-verification" content="BQBSZ5eSfYzOln8w5z23-5Lq88blGMXk0wHakOaTHt8" />
		<meta name="msvalidate.01" content="8A61CE3B2E427D3B62A2777590291515" />
	</head>
	<body class="wizard">
		<div class="row">
			<!-- Header -->
			<div class="twelve columns header">
				<%= image_tag('tioki/tioki-logo.png') %>
			</div>
			<div class="clear"></div>

			<!-- If there are any notices are alerts -->
			<% unless notice.nil? && alert.nil? %>
				<div class="twelve columns notices">
					<!-- Display Notices -->
					<% unless alert.nil? %>
						<p class="info"><%= notice %></p>
					<% end %>

					<!-- Display Alerts -->
					<% unless alert.nil? %>
						<p class="alert"><%= alert %></p>
					<% end %>
				</div>
				<div class="clear"></div>
			<% end %>

			<!-- Load in content -->
			<div class="twelve columns content">
				<%= yield %>
			</div>
		</div>
	</body>
</html>
