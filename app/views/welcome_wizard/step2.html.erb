<div class="row kRap">
	<div class="twelve columns">
		<h1 class="smaller" style="margin: 14px 0px 14px 0px">Add your personal info</h1>
	</div>
	<div class="clear"></div>

	<div class="seven columns">
		<form method="POST">
			<table>
				<tr>
					<td>
						<label>
							<% if currentUser.avatar? %>
								<%= image_tag(currentUser.avatar.url(:medium), :width => "160", :style => "float:left") %>
							<% else %>
								<%= image_tag('dl_icons/no_avatar_large.jpg') %>
							<% end %>
							<div style="float:left">
								<%= currentUser.name %><br />
								<div id="what">
									Add a photo
								</div>
							</div>
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>Where do you live?</span>
							<%= text_field_tag :locatiom, currentUser.location, :placeholder => "(Los Angeles, CA)" %>
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>Add a Headline (140 Char.)</span>
							<%= text_area_tag "user[headline]", currentUser.headline ,:placeholder => "Ex: Waiter, actor, model, singer" %>
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>Add a few skills (i.e. Ipad, Classromm Management)</span>
							<input type="text" name="user[skills]" />
						</label>
					</td>
				</tr>
			</table>
			<div class="button_wrap">
				<input type="submit" class="large button" style="padding:9px 50px;display:inline;width:auto;" value="Next Step" />
			</div>
		</form>
	</div>
	<div class="four columns">
		<div class="fyi">
			<h3><span class="green bold">A Tioki profile helps you</span></h3>
			<ul>
				<li>Showcase your talents using video, pictures, & skills tags</li>
				<li>Establish your online presence as an educator</li>
				<li>Promote your skills & increase your opportunities</li>
			</ul>
		</div>
	</div>
</div>
<script type="text/coffeescript">
	$ ->
		$('input[name="user[skills]"]').tokenInput "/api/skills", {
			hintText: "Skills...",
			theme: "facebook",
			resultsLimit: 10,
			prePopulate: <%= currentUser.skills.to_json(:only => [:id, :name]).html_safe %>
		}
</script>
