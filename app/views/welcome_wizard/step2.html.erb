<style>
tr.seeking, tr.student {
	display:none;
}
</style>

<div class="row kRap">
	<div class="twelve columns">
		<h1 class="smaller" style="margin: 14px 0px 14px 0px"><span><%= self.current_user.first_name %></span>, let's get your professional profile started.</h1>
	</div>
	<div class="clear"></div>

	<div class="seven columns">
		<form method="POST">
			<table>
				<tr>
					<td>
						<label>
							<span>I live in</span>
							<input type="text" name="teacher[location]" placeholder="(Los Angeles, CA)" />
						</label>
					</td>
				</tr>
				<tr>
					<td style="border-bottom: solid 1px #DADADA;padding:3px inherit;">
						<label>
							<span>I am currently</span>
						</label>
						<label class="radio inline">
							<input type="radio" name="current" value="employed" checked="checked" /> Employed
						</label>
						<label class="radio inline">
							<input type="radio" name="current" value="seeking" /> Job Seeking
						</label>
						<label class="radio inline">
							<input type="radio" name="current" value="student" /> a Student
						</label>
					</td>
				</tr>
				<tr class="employed">
					<td>
						<label>
							<span>Job Title</span>
							<input type="text" name="teacher[position]" />
						</label>
					</td>
				</tr>
				<tr class="employed">
					<td>
						<label>
							<span>School or Place of Employment</span>
							<input type="text" name="teacher[school]" />
						</label>
					</td>
				</tr>
				<tr class="seeking">
					<td>
						<label>
							<span>Most recent job title</span>
							<input type="text" name="experience[position]" />
						</label>
					</td>
				</tr>
				<tr class="seeking">
					<td>
						<label>
							<span>Previous Place of Employment</span>
							<input type="text" name="experience[company]" />
						</label>
					</td>
				</tr>
				<tr class="seeking">
					<td>
						<label>
							<span>Start Date</span>
							<%= select_month Date.today, :field_name => 'exp_start_month', :add_month_numbers => false, :class => 'chzn' %>
							<%= select_year Date.today, :field_name => 'exp_start_year', :start_year => 1900, :end_year => Time.now.year + 1, :class => 'chzn' %>
						</label>
					</td>
				</tr>
				<tr class="seeking">
					<td>
						<label>
							<span>End Date</span>
							<%= select_month Date.today, :field_name => 'exp_end_month', :add_month_numbers => false, :class => 'chzn' %>
							<%= select_year Date.today, :field_name => 'exp_end_year', :start_year => 1900, :end_year => Time.now.year + 1, :class => 'chzn' %>
						</label>
					</td>
				</tr>
				<tr class="student">
					<td>
						<label>
							<span>College / University</span>
							<input type="text" name="edu[school]" />
						</label>
					</td>
				</tr>
				<tr class="student">
					<td>
						<label>
							<span>Degree</span>
							<input type="text" name="edu[degree]" />
						</label>
					</td>
				</tr>
				<tr class="student">
					<td>
						<label>
							<span>Major</span>
							<input type="text" name="edu[concentrations]" />
						</label>
					</td>
				</tr>
				<tr class="student">
					<td>
						<label>
							<span>Start Date</span>
						</label>
                                                <%= select("edu", "start_year", YEARS_ARRAY.reverse, :include_blank => true) %>	
					</td>
				</tr>
				<tr class="student">
					<td>
						<label>
							<span>End Date</span>
                                                        <%= select("edu", "year", YEARS_ARRAY.reverse, :include_blank => true) %>	
						</label>
					</td>
				</tr>
				<tr class="student">
					<td>
						<label class="checkbox">
							<%= check_box_tag "edu[current]" %>
							<span>Currently Attending</span>
						</label>
					</td>
				</tr>
			</table>
			<% if params[:user_connection] %>
				<%= hidden_field_tag :user_connection, params[:user_connection] %>
			<% elsif params[:invitestring] %>
				<%= hidden_field_tag :invitestring, params[:invitestring] %>
			<% elsif params[:vouchstring] %>
				<%= hidden_field_tag :vouchstring, params[:vouchstring] %>
			<% elsif params[:invitecode] %>
				<%= hidden_field_tag :invitecode, params[:invitecode] %>
			<% elsif params[:welcomecode] %>
				<%= hidden_field_tag :welcomecode, params[:welcomecode] %>
			<% end %>

			<div class="button_wrap">
				<input type="submit" class="large button" style="padding:9px 50px;display:inline;width:auto;" value="Next Step" />
			</div>
		</form>
	</div>
	<div class="four columns">
		<div class="fyi">
			<h3><span class="green bold">A Tioki profile helps you</span></h3>
			<ul>
				<li>Showcase your talents using video, pictures, & skills tags</li>
				<li>Establish your online presence as an educator</li>
				<li>Promote your skills & increase your opportunities</li>
			</ul>
		</div>
	</div>
</div>

<script type="text/javascript">
$(document).ready(function() {
	$('input[name="current"]').change(function() {
		var wait = 0;
		var currentVal = $(this).val();
		var classes = ['employed', 'seeking', 'student'];

		for(var i in classes) {
			if(classes[i] == currentVal) continue;
			else $('tr.' + classes[i]).each(function() {
				var obj = $(this);
				setTimeout(function() { obj.fadeOut(500); }, wait * 500);
			});
			wait++;
		}

		for(var i in classes) {
			if(classes[i] != currentVal) continue;
			else $('tr.' + classes[i]).each(function() {
				var obj = $(this);
				setTimeout(function() { obj.fadeIn(500); }, wait * 500);
			});
			wait++;
		}

		return false;
	});
});
</script>
