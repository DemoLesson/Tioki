<style>
tr.seeking, tr.student {
	display:none;
}
</style>

<div class="row kRap">
	<div class="twelve columns">
		<h1 class="smaller" style="margin: 14px 0px 14px 0px"><span><%= self.current_user.first_name %></span>, let's move on to your education.</h1>
	</div>
	<div class="clear"></div>

	<div class="seven columns">
		<% if User.current.teacher.linkedin.nil? %>
			<h2>Fill out the information below</h2>
		<% else %>
			<h2>Verify the imported information below</h2>
		<% end %>
		<table style="width:100%;">
			<% User.current.teacher.educations.each do |edu| %>
				<tr>
					<td>
						<a href="/remove_education/<%= edu.id %>?redirect=<%= currentURL %>" class="button" style="float:right;margin-top:20px;" />Remove</a>
						<h3><%= edu.school %></h3>
						<span><%= edu.degree.empty? ? '' : edu.degree + ', ' %><%= edu.concentrations %></span><br />
						<span><%= edu.start_year %></span>
						<span> &mdash; </span>
						<% if edu.current %>
							<span>Present</span>
						<% else %>
							<span><%= edu.year %></span>
						<% end %><br /><br />
					</td>
				</tr>
			<% end %>
		</table>
		<form method="POST">
			<input type="hidden" name="add_education" value="1" />
			<h2>Add another Education</h2>
			<table>
				<tr>
					<td>
						<label>
							<span>School</span>
							<input type="text" name="education[school]" />
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>Degree</span>
							<input type="text" name="education[degree]" placeholder="(e.g. B.A, Masters, etc.)" />
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>Degree</span>
							<input type="text" name="education[concentrations]" placeholder="(e.g. Sociology, Chemistry, etc.)" />
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>Start Year</span>
							<%= select("education", "start_year", YEARS_ARRAY.reverse, :include_blank => true) %>
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span>End Year</span>
							<%= select("education", "year", YEARS_ARRAY.reverse, :include_blank => true) %>
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label class="checkbox">
							<input type="checkbox" name="education[current]" value="yes" />
							I currently go to school here here
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<label>
							<span></span>
							<input type="submit" class="large button" value="Add this school to my application" />
						</label>
					</td>
				</tr>
			</table>
		</form>
		<% unless User.current.teacher.educations.empty? %>
			<h2>I'm done adding my education...</h2>
			<a href="step4" class="secondary large button" style="padding:9px 50px;width:auto;">Next Step</a>
		<% else %>
			<p>Please provide some kind of education background...</p>
		<% end %>
		<div style="clear:both;height:40px;"></div>
	</div>
	<div class="four columns">
		<div class="fyi">
			<h3><span class="green bold">A Tioki profile helps you</span></h3>
			<ul>
				<li>Showcase your talents using video, pictures, & skills tags</li>
				<li>Establish your online presence as an educator</li>
				<li>Promote your skills & increase your opportunities</li>
			</ul>
		</div>
	</div>
</div>
