<span style="font-size:30px; font-family: Arial, Helvetica, 'Nimbus Sans L', sans-serif; color:#000; text-shadow:#ccc 1px 1px 2px; float:left">Create Your DemoLesson Profile</span><br>

<%= form_for :user, :url => { :controller => :users, :action => :create} do |f| %>
    <p><%= f.label "Email Address" %><br />
    <%= f.text_field :email, :size => 60 %><br />
	<small>We promise we won't share your email with anyone.</small></p>

    <p><%= f.label "Your Full Name" %><br />
    <%= f.text_field :name, :size => 60 %></p>

    <p><%= f.label :Password %><br />
    <%= f.password_field :password, :size => 60 %><br />
	<small>Must contain one lowercase letter, one number and be at least 7 characters long</small></p>

    <p><%= f.label "Confirm Password" %><br />
    <%= f.password_field :password_confirmation, :size => 60 %></p>

	<p class="notice_two">By clicking on "Create an account" below, you are agreeing to the <%= link_to "Terms of Service", "/termsofservice" %> and the <%= link_to "Privacy Policy", "/privacy" %>.</p>
	
	<div>
    	<%= f.submit "Create an account", :class => "btn btn-success" %>
	</div>
<% end %>
