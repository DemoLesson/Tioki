<section class="info panel" style="height:auto;width:400px;background-color:#FFF; border: 1px solid #ccc; border-radius: 0; margin:30px 0px 10px 0px">

  <div style="margin-left:20px">
    <h2> Update Email and Name </h2>
    <%= form_tag :action => "update_settings" do %>
      <div class="field">
        <%= label "user", :email %><br />
        <%= text_field "user", :email %>
      </div></br>
      <div class="field">
        <%= label "user", :name %><br />
        <%= text_field "user", :name %>
      </div></br>
      <div class="field">
        <%= label "user", "Current Password (for security purposes)" %><br />
        <%= password_field "user", :password %>
      </div></br>
      <div class="actions">
        <%= submit_tag "Update Information" %>
      </div>
    <% end %>
  </div>

</section>

