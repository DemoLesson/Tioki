
<section id="main-content" class="inner-content">
<h1>Administration</h1>

<ul id="breadcrumbs">
  <li>Home</li>
</ul>

<%= render :partial => "admin_stats", :locals => { :stats => @stats } %>
<%= render :partial => "admin_menu" %>

<div class="clear" style="margin-top: 2.5em; border-bottom: 1px solid #ccc;"></div>

<div class="form-wrap">
<%= form_tag '/admin' , :action => 'search', :method => 'get' do %>
  <p>
  <strong>Find User:</strong> <%= text_field_tag :tname, params[:tname] %>
  <strong>Video?</strong><%= check_box_tag :vid, params[:vid] %>
  <strong>Applied?</strong><%= check_box_tag :applied, params[:applied] %>
  <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>

<div id="wrapper">

<div id="left" style="width: 905px"align="left">

<p style= "font-size: 20px; margin: 0; padding: 0;"><strong>Teachers</strong></p>
<table cellpadding = "5">
  <tr>
    <th>Teacher Name</th>
    <th>Email</th>
    <th>Registered</th>
    <th>Last Login</th>
    <th>Login Count</th>
    <th>Video?</th>
    <th>Applied?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%- @users.each do |user| %>
  <tr>
    <td>
      <%= link_to user.name, '/'+user.teacher.url.to_s unless user.teacher.nil? %>
      <%= user.name if user.teacher.nil? %>
    </td>
    <td><%= link_to user.email, 'mailto:' + user.email %></td>
    <td><%= user.created_at.to_formatted_s(:short) %></td>
    <td>
      <% if user.last_login? %>
        <%= user.last_login.to_formatted_s(:short) %>
      <% else %>
        Unknown
      <% end %>
    </td>
    <td>
      <% if user.login_count? %>
        <%= user.login_count.to_s %>
      <% else %>
        Unknown
      <% end %>
    </td>
    <td>
      <% unless user.teacher.nil? %>
        <% if user.teacher.videos.count > 0 %>
          Yes
        <% else %>
          No
        <% end %>
      <% end %>
    </td>
    <td>
      <% unless user.teacher.nil? %>
        <% if user.teacher.applications.count > 0 %>
          Yes
        <% else %>
          No
        <% end %>
      <% end %>
    </td>
    <td><%= link_to 'Deactivate', user_path(user, :deactivate => true), :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Create Teacher', "/admin/users/create_teacher?user_id=#{user.id}&redir=/admin" if user.teacher.nil? %></td>
  </tr>
<% end -%>
</table>
<%= will_paginate @users %>

</div>

</div>
</section>
