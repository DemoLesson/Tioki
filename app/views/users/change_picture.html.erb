<h2>Change Profile Picture</h2>

<% if @user.avatar? %><p>Current picture<br /><div class="bordered_image"><%= image_tag @user.avatar.url(:medium) %></div></p><% else %><p>No picture uploaded yet.</p><% end %>

<%= form_for @user, :as => :user, :url => "/users/"+@user.id.to_s, :html => { :multipart => true } do |f| %>
  <div class="field">
	<%= f.file_field :avatar %>
	<br/><span style= "color:#ff0000; font-size:12px; margin-left: 2px; text-align: center"><strong> PICTURE FILE SIZE LIMIT: 2MB</strong></span>
  </div>

  <div class="actions">
  	<%= f.submit "Upload Picture" %>
  </div>
<% end %>