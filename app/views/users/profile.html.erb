									<%= @teacher.user.vouched_skills.collect(&:skill_id).count(skill.id) %>
								<% end %>
								<div style="float:right">
									<% @teacher.user.vouched_skills.select{|vouched_skill| vouched_skill.skill_id == skill.id && vouched_skill.voucher }[0..3].each do |vouched_skill| %>
