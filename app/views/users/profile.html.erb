<section id="main-content" class="inner-content">
<% if self.current_user.id.even? %>

<section class="info panel" style="height:180px;background-color:#FFF; border: 1px solid #ccc; border-radius: 0; margin:30px 0px 10px 0px">
		<section class="two-column right-side" style ="width:765px;margin:0px 10px 10px -100px">
			<!-- EDIT AND FOLLOW BUTTONS -->
			<% if self.current_user != nil %>
				<div style="float:right;margin-top:0px">
				<!-- Connection Options -->
				<% # IF this is my profile allow me to edit %>
				<% if !self.current_user.nil? %>
					<a href="/me/profile/edit" class="action-button bg-salmon">
						Edit My Profile
					</a>
				<% # IF im not a user then let me register %>
				<% elsif !self.current_user %>
					<a href="/welcome_wizard?x=step1&user_connection=<%= @teacher.user.id %>" class="action-button bg-salmon">
						<%= ablang('connection.connect') %>
					</a>
				<% # IF we are already connected or if i am a school allow me to send a message %>
				<% elsif Connection.mine.collect{|x| x.not_me.id}.include? @teacher.user.id || !self.current_user.school.nil? %>
					<%= link_to "Send Message", { :controller => 'messages', :action => 'new', :user_id_to => @teacher.user_id }, {:class => "action-button bg-salmon"} %>
				<% # IF we are not connected then display "connect" button %>
				<% elsif self.current_user.teacher != nil %>
					<%= link_to  ablang('connection.connect'), { :controller => 'connections', :action => 'add_connection', :user_id => @teacher.user_id }, :class => "action-button bg-salmon" %>
				<% end %>
				<% if !self.current_user.nil? && self.current_user.teacher == @teacher %>
					<%= link_to "My Public Profile", "/profile/"+@teacher.url %>
				<% end %>
				</div>
			<% end %>
			
			<!-- START Teacher INFO -->
			<h2 style="margin: 10px 0px -5px 10px">
			<%= @teacher.user.name %>
			</h2>
			
			<% if @teacher.headline? %>
				<h4 style="margin-left:10px;margin-top:10px;width:auto">
					"<%= @teacher.headline %>"
				</h4>
			<% end %>
			
			<p style="margin-left:10px; margin-top:-15px;width:auto">
			  	<% if @teacher.position.present? && @teacher.school.present?%>
					<strong style="color:#2AA99B">
						Currently:
					</strong> 
					<%= @teacher.position %> at <%= @teacher.school %> in  
				<% end %>
				<%= @teacher.location %>
			</p>
			<p>
			<section id="updates" style="margin: 0px 0px 0px 10px;">
				<!-- SOCIAL LINKS -->
					<a href="my_connections.html" style= "margin-right:10px;">
					<div class="count connections" style= "margin-bottom:-15px;">
					<%= User.current.pending_connections(false).count %>
					</div>
					<%= ablang('connection.plural') %>
					</a>
					<% if @teacher.twitter.present? %>
						<% if @teacher.twitter.include? '//' %>
							<%= link_to image_tag('tioki/icons/twitter2.png'), @teacher.twitter %>
						<% else %>
							<%= link_to image_tag('tioki/icons/twitter2.png'), '//'+@teacher.twitter %>
						<% end %>
					<% end %>

					<% if @teacher.linkedin.present? %>
						<% if @teacher.linkedin.include? '//' %>
							<%= link_to image_tag('tioki/icons/LinkedIn_IN_Icon_25px.png', :border => 0, :style=>"margin-bottom:-0.5px; margin-left:10px;"), @teacher.linkedin %>
						<% else %>
							<%= link_to image_tag('tioki/icons/LinkedIn_IN_Icon_25px.png', :border => 0, :style=>"margin-bottom:-0.5px; margin-left:10px;"), '//' + @teacher.linkedin %>
						<% end %>
					<% end %>

					<% if @teacher.edmodo.present? %>
						<% if @teacher.edmodo.include? '//' %>
							<%= link_to image_tag('tioki/icons/edmodo.png', :style=>"margin-left:10px;"), @teacher.edmodo %>
						<% else %>
							<%= link_to image_tag('tioki/icons/edmodo.png', :style=>"margin-left:10px;"), '//'+@teacher.edmodo %>
						<% end %>
					<% end %>

					<% if @teacher.betterlesson.present? %>
						<% if @teacher.betterlesson.include? '//' %>
							<%= link_to image_tag('tioki/icons/betterlesson.png', :style=>"margin-left:10px;"), @teacher.betterlesson %>
						<% else %>
							<%= link_to image_tag('tioki/icons/betterlesson.png', :style=>"margin-left:10px;"), '//'+@teacher.betterlesson %>
						<% end %>
					<% end %>

					<% if @teacher.teachingchannel.present? %>
						<% if @teacher.teachingchannel.include? '//' %>
							<%= link_to image_tag('tioki/icons/teachingchannel.png', :style=>"margin-left:10px;"), @teacher.teachingchannel %>
						<% else %>
							<%= link_to image_tag('tioki/icons/teachingchannel.png', :style=>"margin-left:10px;"), '//'+@teacher.teachingchannel %>
						<% end %>
					<% end %>
			</section>
			</p>
		</section>
		<section class="profile-thumb-large" style="margin: 10px 0px 10px 10px;">
			<% if @teacher.me? %>
				<a href="/me/profile/edit/upload-avatar" class="edit"><span class="iconic pen"></span> Edit</a>
			<% end %>
			<% if (@connected || @guest || !@teacher.user.privacy["avatar"]) && @teacher.user.avatar? %>
				<%= image_tag(@teacher.user.avatar.url(:medium), :width => "160") %>
			<% else %>
				<%= image_tag('dl_icons/no_avatar_large.jpg') %>
			<% end %>
		</section>
</section>

<!-- CONTENT SECTION -->
<section class="profile-content" style="width:1000px;">
