							<h4 style="margin: 10px 0px -5px 10px">
								Want a Rockstar profile? Click <span style="color:#F66C4C">here</span> to get started.
							</h4>	
							<h5 style="margin: 10px 0px -5px 80px">
							</h5>
						</a>
					</section>
			
			<% end %>
		
		<!-- START Experience Section-->
