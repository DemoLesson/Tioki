										<% end %>
									<% end %>
									<% if User.current && @teacher.user != User.current %>
										<%= link_to "+", { :controller => "vouches", :action => "addvouch", :user_id => @teacher.user_id, :skill_id => skill.id } %>
									<% end %>
								</div>
								<br />
							</div>
						<% end %>
					<% end %>
					</section>
					</br>
				<% end %>
		</section>
		
		<!-- START Credential Section-->
