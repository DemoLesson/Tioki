			<% if @self && @user.skills.size > 0  %>
				<section class="info">
					<%= link_to "Verify Skills", '/requestvouch', :class => "action-button bg-green" %>
				</section>
			<% end %>-->
		</section><!-- End Sidebar -->
		
		
		<!-- Activity Content -->
		<section class="profile-content" style="float:left;margin:0px 0px 30px 15px">
			
		<!-- START Checklist Content -->
