<%= form_tag jobs_path, :method => :get do %>
  <div id = "search">
    <label for = ""><img src="/assets/search-icon-white-one-md.png" alt="search-icon-white-one-md.png" /> Search Jobs </label>
    <%= text_field_tag :searchkey, params[:searchkey], :placeholder => 'Search Keyword (job title, subject)' %>
    <%= text_field :location, 'city', :placeholder => "Type a city or address" %> 
    <%= submit_tag "Go", :id => "go" %>
    <div id = "advanced">Advanced</div>
    <div id = "jobSearchMenu" class="hideAdvancedSearch" > 
      <div id = "jobList">
        <div>Show Jobs within Distance of</div>
        <div>That has been Posted within</div>
        <div>That is for these Grade Levels</div>
        <div>Show jobs of School Type</div>
        <div>That is this Job Type</div>
        <div>For this Calendar Year</div>
      </div>
      <div id = "jobSelection" >
        <select id="radius" name = "radius">
          <option value = "100">100 miles</option>
          <option value = "50">50 miles</option>
          <option value = "25" selected>25 miles</option>
          <option value = "20">20 miles</option>
          <option value = "15">15 miles</option>
          <option value = "10">10 miles</option>
          <option value = "5">5 miles</option>
        </select><br />
        <select id="posttime" name="posttime">
          <option value = "">Show All</option>
          <option value = "1">Last 24-hours</option>
          <option value = "7">Last 7 days</option>
          <option value = "14">14 days</option>
          <option value = "30">30 days</option>
        </select><br />
        <select id= "grade_level" name="grade_level">
          <option value = "">Show All</option>
          <option value = "1">Pre-K</option>
          <option value = "2">Elementary</option>
          <option value = "3">Middle</option>
          <option value = "4">High School</option>
          <option value = "5">Adult School</option>
          <option value = "6">Other</option>
          <option value = "7">K-6</option>
          <option value = "8">K-8</option>
          <option value = "9">6-12</option>
          <option value = "10">12</option>
        </select><br />
        <select id="school_type" name ="school_type">
          <option value = "">Show All</option>
          <option value = "2">Charter</option>
          <option value = "1">District</option>
          <option value = "3">Private</option>
          <!--<option value = "Summer">Summer</option>
          <option value = "Adult">Adult</option>-->
          <option value = "4">Other</option>
        </select><br />
        <select id= "employment" name="employment">
          <option value = "">Show All</option>
          <option value = "0">Full-Time</option>
          <option value = "1">Part-Time</option>
          <!--<option value = "Substitute">Substitute</option>-->
          <option value = "2">Contract</option>
          <option value = "3">Other</option>
        </select><br />
        <select id="calender" name="calender" >
          <option value = "">Show All</option>
          <option value = "1">Year-Round</option>
          <option value = "2">Track</option>
          <option value = "3">Semester</option>
          <option value = "4">Traditional</option>
        </select>
      </div>
    </div>
  </div>
<% end %>
<script> 
       $(function () {
           $("#advanced").click(function() {
               if ($("#jobSearchMenu").hasClass("hideAdvancedSearch")) {
                  $("#jobSearchMenu").removeClass("hideAdvancedSearch").addClass("showAdvancedSearch");
                  $("#search").after($("#jobSearchMenu"));
               } else {
               $("#jobSearchMenu").removeClass("showAdvancedSearch").addClass("hideAdvancedSearch");
               }
          });
       });
</script>

<div id="sidebar" class="job_browser">

	<div id="myApplication">
	    <img src="/assets/Briefcase.png" id = "myApplicationPic" class = "icon" width = "34" alt="Briefcase.png"/>
	    <h4>Applications</h4>

		<%= link_to 'My Applications', :teacher_applications %></br>
	    <% if @interviews == nil %>
		   <%= link_to 'No Scheduled Interviews', :my_interviews %>
	    <% elsif @interviews.size == 1 %>
		   <%= link_to '1 Interview Request', :my_interviews %>
	    <% else %>
		   <%= link_to @interviews.size.to_s+' Interview Requests', :my_interviews %>
	    <% end %>
	</div>

	<div id = "messages">
	    <img src="/assets/envelope.png" id = "messagesPic" class = "icon" width = "35" alt="envelope.png"/>
	    <h4>Inbox</h4>

	    <% if unread_messages == 0 %>
		    <%= link_to "No New Messages", :messages %>
	    <% elsif unread_messages == 1 %>
		    <%= link_to "1 Unread Message", :messages %>
	    <% else %>
		    <%= link_to unread_messages.to_s+" Unread Messages", :messages %>
	    <% end %><br />
	</div>


 <div id="content">
    <div id="featuredJobs">
       <h4>Featured Schools </h4>

   </div>
 </div>
</div>
<div id="content">

  <div id = "recentActivity">
    <h4>Recent Activity</h4>

    <% @activities.each do |activity| %>
      <div class="item_jobs">
	      <div class="item_picture">
		      <% if activity.creator.avatar? %><%= link_to image_tag(activity.creator.avatar.url(:thumb)), activity.user.teacher.url %><% else %><%= link_to image_tag("no_image.png"), activity.user.teacher.url %><% end %>
	      </div>
	      <p>
              <%= link_to activity.creator.name, activity.creator.teacher.url %> has connected with <%= link_to activity.user.name, activity.user.teacher.url %>
	     </p>
     </div>
    <% end %>
    <button type = "button" id = "more">MORE</button>
  </div>
</div>
<script>
   $(function() {
        $(".item_jobs").each(function(index, item) {
           if (index > 2) {
              $(item).css("display", "none");
           }
        });
        $("#more").click(function() {
              $(".item_jobs").css("display", "block");
              $("#more").text("Less");
              $("#more").addClass("less");
        });
        $(".less").click(function() {
              $(".item_jobs").each(function(index, item) {
                  if (index > 2) {
                     $(item).css("display", "none");
                  }
              });
        });
    });
</script>






