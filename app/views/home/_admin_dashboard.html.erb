
  <h1>Welcome, <%= self.current_user.first_name %>!</h1>

<div id="sidebar" class="job_browser">

<h4>Actions</h4>

<div>
	<%= link_to "Post New Job", {:controller => :jobs, :action => :new}, {:class => "btn btn-success"} %>
</div>

<h4>Status</h4>

<% if unread_messages == 0 %>
<%= link_to "No New Messages", :messages %>
<% else %>
<%= link_to unread_messages.to_s+" Unread Messages", :messages %>
<% end %>

<br />

<% if @jobs.count == 0 %>
No Active Job Posts
<% else %>
<%= link_to @jobs.count.to_s+" Active Job Posts", my_jobs_path %>
<% end %>

<br />
<% if @applicants == 0 %>
	<%= link_to 'No New Applicants', my_jobs_path %>
<% elsif @applicants == 1 %>
	<%= link_to '1 New Applicant', my_jobs_path %>
<% else %>
	<%= link_to @applicants.to_s+' New Applicants', my_jobs_path %>
<% end %>
<br />

<% if @pins == 0 %>
	No Favorite Teachers
<% elsif @pins == 1 %>
  <%= link_to "1 Total Favorite", "/favorites" %>
<% elsif %>
  <%= link_to @pins.to_s + " Total Favorites", "/favorites" %>
<% end %>

<br />
No Starred Teachers
</div>

<div id="content">
<h4>News Feed</h4>

<% if @activities.count == 0 %>
<div style="text-align:center; color: #999">No Current News Stories</div>
<% else %>
	<% @activities.each do |activity| %>
		<% if activity.activityType == 4 %>
			<p class="activity"><span>DemoLesson Blog</span><strong>New blog post:</strong> <%= link_to activity.blog_title, activity.blog_url %></p>
		<% elsif activity.activityType == 3 %>
                  <% if activity.application_job.active && activity.application.status == 1 %>
                    <p class="activity"><% if activity.creator.avatar? %><span class="img"><%= image_tag activity.creator.avatar.url(:tiny) %></span><% end %><span><%= activity.created_at.to_s(:due_time) %></span><strong><% if activity.teacher != nil %><%= link_to activity.creator.name, "/profile/#{activity.teacher.url}?application=#{activity.application.id}" %><% end %></strong> applied to your open position <%= link_to activity.application_job.title, activity.application_job %> at <%= link_to activity.application_school.name, activity.application_school %>.</p> 
                  <% end %>
		<% elsif activity.activityType == 2 %>
                  <% if activity.interview.date != Time.at(0) && activity.application_job.title != 'Not found' && activity.application_job.active && activity.application.status == 1 %>
                  <p class="activity"><% if activity.creator.avatar? %><span class="img"><%= image_tag activity.creator.avatar.url(:tiny) %></span><% end %><span><%= activity.created_at.to_s(:due_time) %></span><strong><%= link_to activity.creator.name, "/profile/#{activity.teacher.url}'?application=#{activity.application.id}" %></strong> scheduled an interview at <% if activity.interview.date == Time.at(0) %><strong>not applicable</strong>
                <% else %>
                  <% if activity.interview.selected == 1 %>
                    <%= link_to activity.interview.date.to_s(:interview_time), '/applications/'+activity.application_job.id.to_s %>
                  <% elsif activity.interview.selected == 2 %>
                    <%= link_to activity.interview.date_alternate.to_s(:interview_time), '/applications/'+activity.application_job.id.to_s %>
                  <% else %>
                    <%= link_to activity.interview.date_alternate_second.to_s(:interview_time), '/applications/'+activity.application_job.id.to_s %>
                  <% end %>
                <% end %> for your position <%= link_to activity.application_job.title, activity.application_job %>.</p> 
              <%end %>
		<% elsif activity.activityType == 1 %>
			<p class="activity"><% if activity.creator.avatar? %><span class="img"><%= image_tag activity.creator.avatar.url(:tiny) %></span><% end %><span><%= activity.created_at.to_s(:due_time) %></span><strong><% if activity.teacher != nil %><%= link_to activity.creator.name, "/profile/#{activity.teacher.url}" %><% end %></strong> sent you a message: <%= link_to activity.message.subject, activity.message %>.</p> 
		<% end %>
	<% end %>
<% end %>
</div>

