			</fieldset>
			<fieldset id="enterpwd">
				<input name="user[password]" type="password" placeholder="Password" />
			</fieldset>
			<fieldset id="confirmpwd">
				<input name="user[password_confirmation]" type="password" placeholder="Confirm Password" />
			</fieldset>
			<fieldset>
				I am a
				<%= select_tag "user[occupation]", options_for_select(User::OCCUPATION) %>
			</fieldset>
			<fieldset style="margin-right:0px !important">
				<input type="submit" class="button med-button" value="Get Started" style="width:140px !important;padding: 6px 9px;"/>
			</fieldset>
			<div style="height:100px; width:250px; margin-right:0px; margin-top:-90px">
				<h4>
				<span style="float:right;margin-right:-40px">Sign Up With:</span>
