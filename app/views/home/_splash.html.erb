<div id="wrapper">
	
<div id="header_inner" style="height: 450px" align="center">

<h1 style= "font-size:45px; font-family: noteworthy; color:#ff0000"><i>Market Yourself Like Never Before!</i></h1>

<p style="font-size:14px;margin-top:1px;margin-bottom:10px;color:#c46c28"><strong></strong></p>

<div id="left" align="left">

<div class="splash_image">
<a href="http://cdn.static.viddler.com/flash/as3/mini-publisher.swf?key=63bc733b" rel="shadowbox;height=500;width=840"><img src= "http://s3.amazonaws.com/DemoLessonS3/site/Teacherplaybutton.png"></a>
</div>

</div>

<div id="right" align="right">
	
	<p style="font-size:20px;margin-top:45px;margin-bottom:10px;">New to Demo Lesson? <strong><span style="color:#ff0000">Join the Beta!</span></strong></p>

	<%= form_for @alpha do |f| -%>

		<div class="field">
		    <%= f.text_field :name,:placeholder => "Full Name", :size => 60 %><br />
		</div>

		<div class="field">
		    <%= f.text_field :email,:placeholder => "Email", :size => 60 %><br />
			<small>We promise we won't share your email with anyone.</small>
		</div>

		<div class="field">
	    	<%= f.label :alpha, "I'm a..." %>
	    	<%= select(:alpha, :userType, { "Teacher" => "1", "Teacher Assistant" => "2", "Student" => "3", "Administrator" => "4" }, :selected => params[:userType]) %>
	  	</div>
	
		<div class="field">
			<%= f.check_box :beta, :checked => true, :hidden => true%> 
		</div>
		<div class="actions" style= "float: right">
			<%= f.submit "Submit",:disable_with => 'Submitting...' %>
		</div>
	<% end -%>


	<div style="display:none;height:0px">
		<%= javascript_tag " $(\"#alpha_userType\").chosen() "%>
	</div>
</div>

</div>

