				<a href="/auth/twitter"><%= image_tag "tioki/icons/twitter3.png", :style => "float:right;margin-right:-30px" %></a>
				<!-- Post to Facebook Wall Function -->
				<a href="/auth/facebook"><%= image_tag "tioki/icons/fb_button.png", :style => "margin-top:4px;float:right;margin-right:10px;height:29px" %></a>
				</h4>
