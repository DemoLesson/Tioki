<li <%= "class=\"has-actions\"".html_safe if @post.user == User.current || User.current.is_admin %>>
	<% i=0; @post.getModels.each do |x| %>
		<% next if i>0; i+=1; %>
		<% next unless x.is_a?(User) %>
		<div class="profile-thumb-small">
			<%= link_to image_tag(x.avatar.url(:tiny), :width => '45px', :height => '45px'), "/profile/#{x.teacher.url}" if x.avatar? %>
			<%= link_to image_tag("dl_icons/no_avatar_tiny.jpg"), "/profile/#{x.teacher.url}" unless x.avatar? %>
		</div>
	<% end %>
	<p><%= raw @post.getMessage %></p>
	<div class="quick-actions">
		<a href="/whiteboard/favorite/<%= @post.id %>" class="has-tip no-tip-dots tip-left action <%= favorited(@post) ? 'star-gold' : 'star-empty' %>" title="Favorite Post">
			<%= favorites(@post) %>
		</a>
		<a href="/whiteboard/hide/<%= @post.id %>" class="has-tip no-tip-dots tip-left action" title="Hide Post">
			<span class="iconic eye"></span>
		</a>
		<% if @post.user == User.current || User.current.is_admin %>
			<a href="/whiteboard/delete/<%= @post.id %>" class="has-tip no-tip-dots tip-left action" title="Delete Post">
				<span class="iconic x_alt"></span>
			</a>
		<% end %>
	</div>
</li>