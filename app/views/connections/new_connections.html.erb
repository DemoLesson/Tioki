<li>
	<div class="profile-thumb-big">
		<% if @user.avatar? %>
			<%= link_to image_tag(@user.avatar.url(:thumb)), "profile/#{@user.url}" %>
		<% else %>
			<%= link_to image_tag("dl_icons/no_avatar_large.jpg"), "profile/#{@user.url}" %>
		<% end %>
	</div>
	<p>
	<a href="/profile/<%= @user.url %>"><%= @user.name %></a>
	<br />
	<%= @user.experiences.where(current => true).first.position %>
	<% if @user.experiences.where(current => true).first.position.present? %>at<% end %> 
	<%= @user.experiences.where(current => true).first.school %><br />
	<%= @user.experiences(current => true).first.location %>
	</p>
	<div>
		<a href="/userconnections/<%= @user.id %>" class="count connections">
			<%= @user.connections.not_pending.count.to_s %>
		</a>
		<% if @user == self.current_user %>
		<% elsif @my_connections.include? @user.id %>
			<%= link_to "Send Message", { :controller => 'messages', :action => 'new', :user_id_to => @user.to_s }, {:class => "sendmessage"} %>
		<% else %>
			<%= link_to "Add", { :controller => 'connections', :action => 'add_connection', :user_id => @user.user }, :class => "addconnection" %>
		<% end %>
	</div>
</li>
