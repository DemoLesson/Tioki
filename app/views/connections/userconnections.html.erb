<section id="main-content" class="inner-content">
	<span style="font-size:20px; font-family: Arial, Helvetica, 'Nimbus Sans L', sans-serif; color:#000; text-shadow:#ccc 1px 1px 2px;">
		<%= @user.name%>'s <%= ablang('connection.plural') %>
	</span><br />

	<div id="sidebar" class="job_browser">
		<div id="myConnections">
			<img src="/assets/contacts.png" id = "myConnectionsPic" class = "icon" width = "34" alt="contacts.png"/>
			<h4><%= ablang('connection.plural') %></h4>
			<%= link_to "Add "+ ablang('connection.plural'), :inviteconnections %><br />
			<%= link_to 'My '+ ablang('connection.plural'), :my_connections %></br>
			<%= link_to "Pending " + ablang('connection.plural') + " (" + pendingcount.to_s + ")", :pending_connections %><br />
		</div>
		<div id="whiteBox" style="height:280px;width:190px;position:fixed;font-size:12px;padding:0px 10px 0;margin: 0px 0px 0px auto">
			<strong><%= ablang('connection.connecting') %> on DemoLesson</strong>
			<ul style="list-style:disc;padding-left:12px">
				<li>Helps you collarborate with those who share your interests</li>
				<li>Enhances your opportunites for professional growth</li>
				<li>Helps you stay in touch with your colleagues</li>
			</ul>
		</div>
	</div>

	<div id="content">
	<% @connections.each do |connection| %>
		<br />
		<div class="item_jobs">
			<div class="item_picture">
				<% if connection.not_me(params[:id]).avatar? %>
					<%= link_to image_tag(connection.not_me(params[:id]).avatar.url(:thumb)), '/profile/' + connection.not_me(params[:id]).teacher.url %>
				<% else %>
					<%= link_to image_tag("dl_icons/no_avatar_medium.jpg"), '/profile/' + connection.not_me(params[:id]).teacher.url %>
				<% end %>
			</div>

			<div id ="connection_desc">
				<strong><%= link_to connection.not_me(params[:id]).name, '/profile/' + connection.not_me(params[:id]).teacher.url.to_s %></strong>
				<%= " <span class=\"connection_degree\">#{Connection.distance(connection.not_me(params[:id]).id).ordinalize}</span>".html_safe %><br />
				<% if connection.not_me(params[:id]).teacher.position.present? && connection.not_me(params[:id]).teacher.school.present?%>
					<%= connection.not_me(params[:id]).teacher.position %> at <%= connection.not_me(params[:id]).teacher.school %>
				<% end %><br />
				<%= connection.not_me(params[:id]).teacher.location %><br /><br />
				<div>
					<% if connection.not_me(params[:id]).id == self.current_user.id  %>
					<% elsif @my_connections.collect{|x| x.not_me.id}.include? connection.not_me(params[:id]).id %>
						<%= link_to "Send Message", { :controller => 'messages', :action => 'new', :user_id_to => connection.not_me(params[:id]).id.to_s }, {:class => "button bg-green"} %>
					<% else %>
						<%= link_to ablang('connection.connect'), { :controller => 'connections', :action => 'add_connection', :user_id => connection.not_me(params[:id]).id }, :class => "button" %>
					<% end%>
				</div>
			</div>
		</div>
	<% end %>
	</div>
</section>
