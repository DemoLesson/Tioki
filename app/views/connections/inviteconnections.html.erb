  domain_key:"8C7MFY8C7PDGQPDBNY3Y", 
  textarea_id:"emails"
};
</script>
<span style="font-size:20px; font-family: Arial, Helvetica, 'Nimbus Sans L', sans-serif; color:#000; text-shadow:#ccc 1px 1px 2px;">Invite Connections</span><br />

<div id="sidebar" class="job_browser">
	<div id="myConnections">
	    <img src="/assets/contacts.png" id = "myConnectionsPic" class = "icon" width = "34" alt="contacts.png"/>
	    <h4>Connections</h4>
		<%= link_to 'My Connections', :my_connections %></br>
                <%= link_to "Pending Connections (" + pendingcount.to_s + ")", :pending_connections %><br />
		<%= link_to "Invite Connections", :inviteconnections %>
	</div>
</div>
<div id="content">

<%= form_for :connection_invite, :url => '/inviteconnection' do |f| %>
  <div class="field">
    <%= label_tag "Emails" %><br />
    <%= text_area_tag :emails, nil, :placeholder => "Email Address", :row => 5, :cols => 43  %><br />
    <a class="cs_import">Add from Address Book</a>
  </div>
  <div class="field">
    <%= label_tag :message, "Email Message" %><br />
    <%= text_area_tag :message, @default_message, :rows=> 5, :cols => 43, :style => "padding:3px;" %>
  </div>
  <div>
    <%= f.submit "Invite", :class => "btn btn-success" %>
  </div>
<% end %>
</div>
