<section id="main-content" class="inner-content">
	<h3>
		Tioki makes finding a job pretty freaking easy!
	</h3>

	<p>
		Since you indicated you are job seeking, why don't you let us know what you are looking for? <br/>
		As positions become available that meet your needs, we'll email you. Easy Peasy!
	</p>
	
<section class="one-column left-side" style="width:450px;margin-top:20px">

<%= form_tag "/jobs/preferences" do %>
	<p style="width:auto">
		Where would you ideally like to work?<br />
		<%= text_field_tag "user[seeking][location]", @location, :placeholder => "e.g. Brooklyn, NY" %> 
		<span style="margin-left:15px;margin-right:15px"><em>or</em></span> 
		<%= check_box_tag "any_location", 1, currentUser.seeking[:location] == "any" %> ANY LOCATION
	</p>

	<p style="width:auto">
		What Subject(s) are you seeking employment for?<br />
		<input type="text" name="user[seeking][subjects]" placeholder="Algebra I, Geometry, Algebra II" />
	</p>

	<p style="width:auto">
		Which Grade Level(s) do you prefer?<br />
		<input type="text" name="user[seeking][grades]" />
	</p>

	<p style="width:auto">
		<span style="margin-right:15px">What Organization Type?</span>
		<%= select_tag('user[seeking][school_type]', options_for_select([["All", "All"], ["District", "District"], ["Charter","Charter"], ["Private", "Private"], ["Other","Other"]], currentUser.seeking[:school_type])) %>
	</p>

	<p style="width:auto">
		Do you want to be actively recruited from schools?
		<%= radio_button_tag 'user[seeking][recruitable]', 'yes', currentUser.seeking.recruitable == 'yes' %> Yes
		<%= radio_button_tag 'user[seeking][recruitable]', 'no', currentUser.seeking.recruitable == 'no' %> No
	</p>

	<p>
		<%= submit_tag "Save 'em" %>
	</p>

<% end %>
</section>
<section class="one-column right-side" style="width:450px" >
	<%= image_tag '/assets/tioki/job_hunt_green.png', :style => "width:350px" %>
</section>
<div class="clearfloat"></div>

<script type="text/javascript">
 $(document).ready(function() {
	 $('input[name="user[seeking][subjects]"]').tokenInput("/api/subjects", {
		 hintText: "Subjects...",
		 theme: "facebook",
		 resultsLimit: 10,
		 prePopulate:
		 <%= @subjects.to_json(:only => [:id, :name] ).html_safe %>
	 });
	$('input[name="user[seeking][grades]"]').tokenInput("/api/grades", {
		hintText: "Grades...",
		theme: "facebook",
		resultsLimit: 10,
		prePopulate:
		 <%= @grades.to_json(:only => [:id, :name] ).html_safe %>
	});
 });
</script>

</section>
