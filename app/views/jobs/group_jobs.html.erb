<section id="main-content" class="inner-content">
	<%= render 'groups/heading' %>

	<h1>Job Board</h1>

	<ul class="group-jobs">
		<% if @jobs.count < 1 %>
			<li>
				There are currently no jobs available at <%= @group.name %>
			</li>
		<% else %>
			<% @jobs.each do |job| %>
				<li>
					<p>
						<h4><%= link_to job.title, job %></h4>
						<%= link_to job.group.name, job.group %> - <%= job.group.location.city %>, <%= job.group.location.region %><br />
						<span>
							<% if job.description.size > 300 %>
								<%=h (job.description.gsub(%r{</?[^>]+?>}, '')[0..304]+'...').html_safe %>
							<% else %>
								<%=h job.description.gsub(%r{</?[^>]+?>}, '').html_safe %>
							<% end %>
						</span>
					</p>
				</li>
			<% end %>
			<% if false %>
				<li><%= will_paginate @jobs %></li>
			<% end %>
		<% end %>
	</ul>
</section>