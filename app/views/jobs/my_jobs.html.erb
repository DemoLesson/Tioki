<h1>My Jobs â†’ <%= link_to @school.name, @school %></h1>

<div id="sidebar" class="job_browser">
	
	<h4>Select School</h4>

	<%= form_for :my_jobs do |f| %>
		<p><%= select_tag 'school_id', options_from_collection_for_select(self.current_user.schools, :id, :name), :multiple => false, :value => "School" %></p>
		
		<div class="actions"><%= f.submit "View Jobs" %></div>
	<% end -%>
	
	<h4>Post Jobs</h4>
	
	<div class="actions">
		<%= link_to "Post New Job", :controller => :jobs, :action => :new %>
	</div>

	<h4>Tip</h4>

Job opportunities at <%= link_to @school.name, @school %> you've posted are listed here. 

</div>

<div id="content">
<% @jobs.each do |job| %>
<div class="item">
	<p>
	<strong><%= link_to job.title, job %> <% if job.active == false %><span style="color:red">(Inactive)</span><% end %></strong>
	<br />
	<%= link_to job.applicants.count.to_s+" Applicants", :controller => :applications, :action => :index, :id => job.id %>, <%= link_to job.new_applicants.count.to_s+" New", :controller => :applications, :action => :index, :id => job.id %> &middot; <%= link_to "Edit posting", edit_job_path(job) %>
	</p>
</div>
<% end %>

<div class="apple_pagination">
	<p><%= will_paginate @jobs, :container => false %></p>
</div>

</div>

<div style="display:none;height:0px">
	<%= javascript_tag " $(\"#school_id\").chosen() "%>
</div>