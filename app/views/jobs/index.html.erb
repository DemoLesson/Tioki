<h1>Listing jobs</h1>

<table>
  <tr>
    <th>School</th>
    <th>Description</th>
    <th>Employment type</th>
    <th>Salary</th>
    <th>Deadline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.school_id %></td>
    <td><%= job.description %></td>
    <td><%= job.employment_type %></td>
    <td><%= job.salary %></td>
    <td><%= job.deadline %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

