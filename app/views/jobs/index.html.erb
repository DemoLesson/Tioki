<h1><%= link_to 'All Jobs', :jobs %><% if params[:subject].present? %> â†’ <%= @subjects[params[:subject].to_i-1].name %><% end %></h1>

<div id="sidebar" class="job_browser">
	<%= form_tag jobs_path(params.except(:controller, :action)), :method => :get do %>
	<h3>Subject</h3>
	<%= select_tag 'subject', options_from_collection_for_select(@subjects, :id, :name), :multiple => false, :value => params[:subject], :size => 10 %><br />
	
	<h3>By ZIP Code</h3>
	
	<div class="field">
		<% if params[:zipcode].present? %>
	    <%= text_field 'zipcode', 'code', :cols => 5, :size => 5, :value => params[:zipcode][:code] %>
		<% else %>
	    <%= text_field 'zipcode', 'code', :cols => 5, :size => 5 %>
		<% end %>
	</div>
	
	<h3>School Type</h3>
	
	<%= check_box "school_type", "1" %> District<br />
	<%= check_box "school_type", "2" %> Charter<br />
	<%= check_box "school_type", "3" %> Private<br />
	<%= check_box "school_type", "4" %> Other
	
	<h3>Grade Levels</h3>
	
	<%= check_box "grade_level", "1" %> Pre-K<br />
	<%= check_box "grade_level", "2" %> Elementary<br />
	<%= check_box "grade_level", "3" %> Middle<br />
	<%= check_box "grade_level", "4" %> High School<br />
	<%= check_box "grade_level", "5" %> Adult School<br />
	<%= check_box "grade_level", "6" %> Other
	
	<h3>Calendar</h3>
	
	<%= check_box "grade_level", "1" %> Year-round<br />
	<%= check_box "grade_level", "2" %> Track<br />
	<%= check_box "grade_level", "3" %> Semester
	
	<h3>Employment Type</h3>
	<%= check_box "employment", "1" %> Full Time<br />
	<%= check_box "employment", "2" %> Part Time<br />
	<%= check_box "employment", "3" %> Contract<br />
	<%= check_box "employment", "4" %> Other
	
	<h3>Special Needs</h3>
	<% if params[:special_needs ] %>
		<%= check_box "special_needs", "1", :checked => true, :onclick => 'javascript:document.reload()' %> Yes
	<% else%>
		<%= check_box "special_needs", "1" %> Yes
	<% end %><br />
	<%= check_box "special_needs", "0" %> No
	
	<div class="actions">
	<%= submit_tag 'Submit', :name => 'commit', :style => '' %>
	</div>
	<% end %>
</div>

<div id="content">
<% @jobs.each do |job| %>
  <div class="item_jobs">
	<div class="item_picture">
		<% if job.school.picture? %><%= link_to image_tag(job.school.picture.url(:thumb)), job %><% else %><%= link_to image_tag("no_image.png"), job %><% end %>
	</div>
	<p>
	<strong><%= link_to job.title, job %></strong><br />
	<span><% if job.description.size > 136 %><%=h (job.description.gsub(%r{</?[^>]+?>}, '')[0..140]+'...').html_safe %><% else %><%=h job.description.gsub(%r{</?[^>]+?>}, '').html_safe %><% end %></span><br />	
	<%= link_to job.school.name, job.school %><br />
	<%= job.school.map_city %><% if job.school.map_state? %>, <%= STATES_ARRAY[job.school.map_state.to_i-1] %><% end %>
	</p>
  </div>
<% end %>

<div class="apple_pagination">
	<p><%= will_paginate @jobs, :container => false %></p>
</div>

</div>

<%= javascript_tag "$(\"#subject\").chosen()" %>