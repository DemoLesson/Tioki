<section id="main-content" class="inner-content">
	<h1>
		<%= possesify(@teacher.user.first_name) + ' ' if @teacher %>
		Video Library
	</h1>
	<section id="panels">
		<section class="panel one-column left-side">
			<h3>Most recent videos</h3>
			<ul>
				<% @videodb.limit(6).each do |vid| %>
					<a href="<%= "#{@videolist}/#{vid.id}" %>">
						<li>
							<div style="float:left;" class="profile-thumb-small">
								<%= image_tag(vid.thumbnail, :width => '45', :height => '45') %>
							</div>
							<strong><%= vid.name %></strong><br />
							<p style="float:none;"><%= vid.description %></p>
						</li>
					</a>
				<% end %>
			</ul>
		</section>
		<section class="panel two-column right-side">
			<h3 id="video"><%= @video.name %> by <%= @video.teacher.profile_link :class => 'salmon' %></h3>
			<section class="panel-actions" id="video">
				<%= @video.embed_code(605, 350) %>
				<hr />
				<% if @video.teacher == self.current_user.teacher || self.current_user.is_admin %>
					<%= link_to 'Edit Video', edit_video_path(@video), :class => "button" %>
					<%= link_to 'Delete Video', @video, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button bg-green" %>
					<hr />
				<% end %>
				<p><%= @video.description %></p>
			</section>
		</section>
	</section>
	<div class="clearfloat"></div>
</section>