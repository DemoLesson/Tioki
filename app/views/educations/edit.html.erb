<section id="main-content" class="inner-content">

	<h1> Edit Education </h1>

	<%= form_for @education do |f| %>

		<div class="field">
			<label>School/University</label>
			<%= f.text_field :school %>
		</div></br>

		<div class="field">
			<%= f.label :degree %>
			<%= f.text_field :degree %>
		</div><br />

		<div class="field">
			<label>Major</label>
			<%= f.text_field :concentrations %>
		</div><br />

		<div class="field">
			<%= f.label "Start Year" %>
			<%= select("education", "start_year", YEARS_ARRAY.reverse, :include_blank => true) %>
		</div><br />

		<div class="field">
			<%= f.label "Graduation Year" %>
			<%= select("education", "year", YEARS_ARRAY.reverse, :include_blank => true) %>
		</div><br />

		<div class="field">
			<%= f.check_box :current %> <label style=" margin-top:-20px; margin-left:20px">I am currently attending here</label>
		</div></br>

		<div>
			<input name="commit" type="submit" value="Submit" onclick="$('#loader').show('fast');" class="btn btn-success" />
			<%= link_to 'Cancel', :back %>
		</div>

	<% end %>
</section>
