<section id="main-content" class="inner-content">


	<h1>Technology Suggestion</h1>

	 Complete the fields to suggest a new technology that we should add to our list. We will contact you when it has been added.</br></br>
	
	<%= form_for @technology_suggestion, :url => "/sendtechsuggestion" do |f| %>
	  	<div class="field">
			<%= f.label :name, "Name of the Technology that Should be added:" %><br />
	  		<%= f.text_field :title%>
		</div></br>

		<div class="field">
			<%= f.label :name, "URL:" %><br />
	  		<%= f.text_field :url%>
		</div></br>
		
		<div class="field">
			<%= f.text_field :user_id, :placeholder => "Your Name", :size => 44, :style => "width:100%;", :type => "hidden", :class => "css3-border-box", :value => self.current_user.nil? ? '' : self.current_user.id %><br />
		</div>
	  <%= f.submit %>
	<% end %>

</section>