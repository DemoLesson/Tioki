	<%= javascript_tag " $(\"#interview_date_alternate_3i\").chosen() "%>
	<%= javascript_tag " $(\"#interview_date_alternate_4i\").chosen() "%>
	<%= javascript_tag " $(\"#interview_date_alternate_5i\").chosen() "%>
	<%= javascript_tag " $(\"#interview_date_alternate_second_1i\").chosen() "%>
