<%= form_for(@school) do |f| %>
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

      <ul>
      <% @school.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Institution Name" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :district %><br />
    <%= f.text_field :district %>
  </div>

  <div class="field">
    <%= f.label "School representative title (i.e. principal, vice principle, etc)" %><br />
    <%= f.text_field :representative_title %>
  </div>

  <div class="field">
    <%= f.label "Address" %><br />
    <%= f.text_field :map_address %>
  </div>

  <div class="field">
    <%= f.label "City" %><br />
    <%= f.text_field :map_city %>
  </div>

  <div class="field">
    <%= f.label "State" %><br />
	<%= select(:school, :map_state, { "Alabama" => "1", "Alaska" => "2", "Arizona" => "3", "Arkansas" => "4", "California" => "5", "Colorado" => "6", "Connecticut" => "7", "Delaware" => "8", "Florida" => "9", "Georgia" => "10", "Hawaii" => "11", "Idaho" => "12", "Illinois" => "13", "Indiana" => "14", "Iowa" => "15", "Kansas" => "16", "Kentucky" => "17", "Louisiana" => "18", "Maine" => "19", "Maryland" => "20", "Massachusetts" => "21", "Michigan" => "22", "Minnesota" => "23", "Mississippi" => "24", "Missouri" => "25", "Montana" => "26", "Nebraska" => "27", "Nevada" => "28", "New Hampshire" => "29", "New Jersey" => "30", "New Mexico" => "31", "New York" => "32", "North Carolina" => "33", "North Dakota" => "34", "Ohio" => "35", "Oklahoma" => "36", "Oregon" => "37", "Pennsylvania" => "38", "Rhode Island" => "39", "South Carolina" => "40", "South Dakota" => "41", "Tennessee" => "42", "Texas" => "43", "Utah" => "44", "Vermont" => "45", "Virginia" => "46", "Washington" => "47", "West Virginia" => "48", "Wisconsin" => "49", "Wyoming" => "50" }) %>
  </div>

  <div class="field">
    <label>ZIP Code</label><br />
    <%= f.text_field :map_zip %>
  </div>

  <div class="field">
    <%= f.label "Phone" %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label "Fax" %><br />
    <%= f.text_field :fax %>
  </div>

  <div class="field">
    <%= f.label "School Type" %><br />
	<%= select(:school, :school_type, { "District" => "1", "Charter" => "2", "Private" => "3", "Other" => "4" }) %>
  </div>

  <div class="field">
    <%= f.label "Grade Levels" %><br />
    <%= select(:school, :grades, { "Pre-K" => "1", "Elementary" => "2", "Middle" => "3", "High School" => "4", "Adult School" => "5", "Other" => "6" }) %>
  </div>

  <div class="field">
    <%= f.label "Number of students" %><br />
    <%= f.text_field :students_count %>
  </div>

  <div class="field">
    <label>API/AYP Scores (Optional)</label><br />
    <%= f.text_field :api_ayp_scores %>
  </div>

  <div class="field">
    <%= f.label "Calendar" %><br />
    <%= select(:school, :calendar, { "Year-round" => "1", "Track" => "2", "Semester" => "3", "Traditional" => "4" }) %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6, :placeholder => "1000 characters maximum" %>
  </div>

  <div class="field">
    <%= f.label :mission %><br />
    <%= f.text_area :mission, :rows => 6, :placeholder => "1000 characters maximum" %>
  </div>

  <div class="field">
    <%= f.label "Application Instructions" %><br />
    <%= f.text_area :highlights, :rows => 6, :placeholder => "1000 characters maximum" %>
  </div>

  <div class="field">
    <label>School Website</label><br />
	<% if @school.website == nil %>
		<%= f.text_field :website, :value => 'http://' %>
	<% else %>
    	<%= f.text_field :website %>
	<% end %>
  </div>

  <div class="field">
    <label>GreatSchools Profile</label><br />
    <%= f.text_field :greatschools, :placeholder => "http://www.greatschools.org/" %>
  </div>

  <div class="field">
    <label>LinkedIn Profile</label><br />
    <%= f.text_field :linkedin, :placeholder => "http://linkedin.com/" %>
  </div>

  <div class="field">
    <label>Facebook Page</label><br />
    <%= f.text_field :facebook, :placeholder => "http://facebook.com/" %>
  </div>

  <div class="field">
  	<label>Show Personal Information <span style="color:#999">(on School Profile)</span><br />
	<%= f.check_box :show_personal_info %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
$("#school_map_state").chosen()
$("#school_school_type").chosen()
$("#school_grades").chosen()
$("#school_calendar").chosen()
</script>
