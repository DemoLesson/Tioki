<h1 class="dashboard_title">Application Dashboard</h1>

<div id="sidebar" class="job_browser">

<div id="myApplication">
    <img src="/assets/file.png" id = "myApplicationPic" class = "icon" height = "34" alt="file.png"/>
    <h4>My Applications</h4>

	<%= link_to 'My Applications', :teacher_applications %></br>
    <% if @interviews == nil %>
	   <%= link_to 'No Scheduled Interviews', :my_interviews %>
    <% elsif @interviews.size == 1 %>
	   <%= link_to '1 Interview Request', :my_interviews %>
    <% else %>
	   <%= link_to @interviews.size.to_s+' Interview Requests', :my_interviews %>
    <% end %>
</div>

<div id = "messages">
    <img src="/assets/sfs_icon_forward.png" id = "messagesPic" class = "icon" height = "34" alt="sfs_icon_forward.png"/>
    <h4>Inbox</h4>

    <% if unread_messages == 0 %>
	    <%= link_to "No New Messages", :messages %>
    <% elsif unread_messages == 1 %>
	    <%= link_to "1 Unread Message", :messages %>
    <% else %>
	    <%= link_to unread_messages.to_s+" Unread Messages", :messages %>
    <% end %><br />
</div>


 <div id="content">
    <div id="featuredJob">
       <h4>Featured Schools </h4>

        <% @featuredjobs.each do |job| %>
	    <% if job.id == 57 || job.id == 100005 || job.id == 29 || job.id == 32 %>	
  	    <div class="item_featured_teacherdash_schools">
		     <div class="item_featured_school_picture_teacherdash">
			     <% if job.school.picture? %><%= link_to image_tag(job.school.picture.url(:thumb)), job %><% else %><%= link_to image_tag("no_image.png"), job %><% end %>
		     </div>
		     <p>
				<span style=""><%= link_to job.school.name, job.school %></span><br />
			 </p>
  	    </div>
	 <% end %>
    <% end %>
   </div>
  </div>
</div>
<div id = "content">
  <div id="tabs">
   <ul>
      <li><a href="#tabs-1">Applications</a></li>
      <li><a href="#tabs-2">Interviews</a></li>
   </ul>
   <div id = "tabs-1"><p>hello</p></div>
   <div id = "tabs-2"><p>goodbye</p></div>
  </div>
</div>
<script>
	$(function() {
		$("#tabs").tabs();
                $("ul").removeClass("ui-widget-header");
	});
</script>
