<div class="actions">
	
<%= link_to 'Education', '/education' %>
<%= link_to 'Experience', '/experience' %>
<%= link_to 'Credentials', '/credentials' %>
	
<div style="float:right">
<%= link_to 'Upload Lesson Video', '/videos/new' %>
<%= link_to 'Change Profile Picture', '/change_picture' %>
</div>

</div>

<div id="right" class="attached">
	<%= render :partial => 'attachments' %>
	<div id="attach_new_btn" class="actions">
	<input name="attach" type="button" value="Attach New File" onclick="$('#attach_form').show('fast'); $('#attach_new_btn').hide();" />
	</div>
</div>

<div id="left_editing">
<%= form_for @teacher, :as => :teacher, :url => '/teachers/'+@teacher.id.to_s, :html => { :multipart => true } do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Current Position</h2>

  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>

  <div class="field">
    <%= f.label :school %><br />
    <%= f.text_field :school %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <h2>Seeking</h2>

  <div class="field">
    <%= f.label :seeking_subject %><br />
    <%= f.text_field :seeking_subject %>
  </div>

  <div class="field">
    <%= f.label :seeking_grade %><br />
    <%= f.text_field :seeking_grade %>
  </div>

  <div class="field">
    <%= f.label :seeking_location %><br />
    <%= f.text_field :seeking_location %>
  </div>

  <h2>Additional Information</h2>

  <div class="field"><%= f.text_area :additional_information, :rows => 7 %></div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>

  <h2>Options</h2>

  <div class="field">
    <%= f.check_box :special_needs %> <%= f.label :special_needs %>
  </div>
  <div class="field">
    <%= f.check_box :willing_to_move %> <%= f.label :willing_to_move %>
  </div>
  <div class="field">
    <%= f.check_box :currently_seeking %> <%= f.label :currently_seeking %>
  </div>
  
<div class="actions">
    <%= f.submit %>
  </div>

<% end %>
</div>
