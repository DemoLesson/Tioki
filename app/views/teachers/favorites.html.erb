<section id="main-content" class="inner-content">
<h3>My Favorites:</h3>
<div id="content">
<% @pins.each do |pin| %>
  <div class="item_jobs">
    <div class="item_picture">
      <% if pin.teacher.user.avatar? %>
        <%= link_to image_tag(pin.teacher.user.avatar.url(:thumb)), "/profile/#{pin.teacher.url}" %>
      <% else %>
        <%= link_to image_tag("dl_icons/no_avatar_medium.jpg"), "/profile/#{pin.teacher.url}" %>
      <% end %>
    </div>
    <strong><%= link_to pin.teacher.user.name, "/profile/#{pin.teacher.url}" %></strong><br />
    <% if pin.teacher.position != nil && pin.teacher.school != nil%>
      <%= pin.teacher.position %> at <%= pin.teacher.school %>
    <% end %><br />
    <%= pin.teacher.location %><br />
    <div>
      <%= link_to "Profile", "/profile/#{pin.teacher.url}", :class => 'button' %>
      <%= link_to image_tag("mail.gif", :border=>0)+" Message", { :controller => 'messages', :action => 'new', :user_id_to => pin.teacher.user.id.to_s }, :class => 'button' %>
      <%= link_to image_tag("docs.gif", :border=>0)+" Unfavorite", { :controller => 'teachers', :action => 'remove_pin', :teacher_id => pin.teacher.id }, :class => 'button' %>
    </div>
  </div>
<% end %>
<%= will_paginate @pins %>
</div>
</section>
