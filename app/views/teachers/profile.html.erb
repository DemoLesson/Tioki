<section id="main-content" class="inner-content">
	<section class="profile group">
		<nav class="subpage">
			<ul>
				<li class="current">
					Tioki Profile
				</li>
				<!--li>
					<a href="terms.html">
					Card Profile
					</a>
				</li-->
				<% if self.current_user != nil && @teacher == self.current_user.teacher %>
					<li>
						<a href="/me/profile/stats">
						Profile Stats
						</a>
					</li>
				<% end %>
			</ul>
		</nav>
		<section class="sidebar">
			<section class="panel" style="padding:10px 0px 5px 0px">

			<!-- Avatar -->
			<div class="profile-thumb-large" style="margin: 0px 0px -10px 10px;">
				<% if @teacher.me? %>
					<a href="/me/profile/edit/upload-avatar" class="edit"><span class="iconic pen"></span> Edit</a>
				<% end %>
				<% if (@connected || @guest || !@teacher.user.privacy["avatar"]) && @teacher.user.avatar? %>
					<%= image_tag(@teacher.user.avatar.url(:medium), :width => "160") %>
				<% else %>
					<%= image_tag('dl_icons/no_avatar_large.jpg') %>
				<% end %>
			</div>

			<!-- Name / Headline -->
			<h3 style="margin: 0px 0px -10px -5px"><%= @teacher.user.name %></h3>
			<p style="margin: 0px 5px 0px 10px"><%= @teacher.headline %></p>

			<!-- Contact Info -->
				<section class="info" style="margin-left:10px;margin-right:5px">
					<% if @connected || @guest || !@teacher.user.privacy["social_networks"] %>
						<p>
						<% if @teacher.twitter.present? %>
							<% if @teacher.twitter.include? '//' %>
								<%= link_to image_tag('tioki/icons/twitter2.png'), @teacher.twitter, :target => "_blank" %>
							<% elsif @teacher.twitter.include? '@' %>
								<%= link_to image_tag('tioki/icons/twitter2.png'), '//twitter.com/'+@teacher.twitter, :target => "_blank" %>
							<% else %>
								<%= link_to image_tag('tioki/icons/twitter2.png'), '//twitter.com/'+@teacher.twitter, :target => "_blank" %>
							<% end %>
						<% end %>

						<% if @teacher.linkedin.present? %>
							<% if @teacher.linkedin.include? '//' %>
								<%= link_to image_tag('tioki/icons/LinkedIn_IN_Icon_25px.png', :border => 0, :style=>"margin-bottom:-0.5px;"), @teacher.linkedin, :target => "_blank" %>
							<% else %>
								<%= link_to image_tag('tioki/icons/LinkedIn_IN_Icon_25px.png', :border => 0, :style=>"margin-bottom:-0.5px;"), '//linkedin.com/' + @teacher.linkedin, :target => "_blank" %>
							<% end %>
						<% end %>
						
						<% if @teacher.pinterest.present? %>
							<% if @teacher.pinterest.include? '//' %>
								<%= link_to image_tag('tioki/icons/pinterest.png', :border => 0, :style=>"margin-bottom:-0.5px;"), @teacher.pinterest, :target => "_blank" %>
							<% else %>
								<%= link_to image_tag('tioki/icons/pinterest.png', :border => 0, :style=>"margin-bottom:-0.5px;"), '//pinterest.com/' + @teacher.pinterest, :target => "_blank" %>
							<% end %>
						<% end %>

						<% if @teacher.edmodo.present? %>
							<% if @teacher.edmodo.include? '//' %>
								<%= link_to image_tag('tioki/icons/edmodo.png'), @teacher.edmodo, :target => "_blank" %>
							<% else %>
								<%= link_to image_tag('tioki/icons/edmodo.png'), '//edmodo.com/'+@teacher.edmodo, :target => "_blank" %>
							<% end %>
						<% end %>

						<% if @teacher.betterlesson.present? %>
							<% if @teacher.betterlesson.include? '//' %>
								<%= link_to image_tag('tioki/icons/betterlesson.png'), @teacher.betterlesson, :target => "_blank" %>
							<% else %>
								<%= link_to image_tag('tioki/icons/betterlesson.png'), '//betterlesson.com'+@teacher.betterlesson, :target => "_blank" %>
							<% end %>
						<% end %>

						<% if @teacher.teachingchannel.present? %>
							<% if @teacher.teachingchannel.include? '//' %>
								<%= link_to image_tag('tioki/icons/teachingchannel.png'), @teacher.teachingchannel, :target => "_blank" %>
							<% else %>
								<%= link_to image_tag('tioki/icons/teachingchannel.png'), '//teachingchannel.org'+@teacher.teachingchannel, :target => "_blank" %>
							<% end %>
						<% end %>
						</p>
					<% end %>
					
					<!-- Current Job / Location -->
					<% if @connected || @guest || !@teacher.user.privacy["current_job"] %>
						<p>
						<% if @teacher.position.present? && @teacher.school.present?%>
							<span class="bold">Currently:</span>
							<%= @teacher.position %> at <%= @teacher.school %>,
						<% end %>
						<%= @teacher.location %>
						</p>
					<% end %>

					<!-- Public profile link -->
					<% if !self.current_user.nil? && self.current_user.teacher == @teacher %>
						<p>
						<%= link_to "My Public Profile", "/profile/"+@teacher.url %>
						</p>
					<% end %>
				</section>
	
				<section style="margin-left:25px">
					<!-- Connection Options -->
					<% # IF this is my profile allow me to edit %>
					<% if !self.current_user.nil? && self.current_user.teacher == @teacher %>
						<a href="/me/profile/edit" class="action-button bg-salmon">
							Improve My Profile
						</a>
					<% # IF im not a user then let me register %>
					<% elsif !self.current_user %>
						<a href="/welcome_wizard?x=step1&user_connection=<%= @teacher.user.id %>" class="action-button bg-salmon">
							<%= ablang('connection.connect') %>
						</a>
					<% # IF we are already connected or if i am a school allow me to send a message %>
					<% elsif Connection.mine.collect{|x| x.not_me.id}.include? @teacher.user.id || !self.current_user.school.nil? %>
						<%= link_to "Send Message", { :controller => 'messages', :action => 'new', :user_id_to => @teacher.user_id }, {:class => "action-button bg-salmon"} %>
					<% # IF we are not connected then display "connect" button %>
					<% elsif self.current_user.teacher != nil %>
						<%= link_to  ablang('connection.connect'), { :controller => 'connections', :action => 'add_connection', :user_id => @teacher.user_id }, :class => "action-button bg-salmon" %>
					<% end %>
				</section>
			</section>
			<!-- Connection Information -->
			<section class="info">
				<p class="heading">
				<%= ablang('connection.plural') %>
				</p>
				<div style="padding:0px 20px;">
					<% @teacher.user.connections.where("`pending` = ?", false).all.shuffle.select{|x|x.not_me(@teacher.user.id).avatar?}[0..7].each do |c| %>
						<div class="profile-thumb-small" style="float:left;margin:0px;overflow:hidden;">
							<%= link_to image_tag(c.not_me(@teacher.user.id).avatar(:medium), :style => 'min-height:45px;min-width:45px;'), "/profile/#{c.not_me(@teacher.user.id).teacher.url}" unless c.not_me(@teacher.user.id).teacher.nil? %>
						</div>
					<% end %>
					<div style="clear:both;"></div>
					<br />
					<a href="/userconnections/<%= @teacher.user.id %>" style="display:block;text-align:center;width:150px;margin-left:10px" class="button bg-green">See All</a>
				</div>
			</section>

			<% if self.current_user %>
				<% if @connected || @guest || !@teacher.user.privacy["contact_info"] %>
					<!-- Contact Information-->
					<section class="info">
					<p class="heading">
					Contact Information
					</p>
					<% unless @teacher.user.email.empty? %>
						<p>
						<span class="bold black">Email:</span>
						<%= @teacher.user.email %><br/>
						</p>
					<% end %>
					<% unless @teacher.phone == nil %>
						<p>
						<span class="bold black">Phone:</span>
						<%= @teacher.phone %>
						</p>
					<% end %>
					</section>
				<% end %>
			<% end %>
			
			<!-- Teacher Technology Tags -->
			<section class="info">
				<p class="heading">
				<%= link_to "Technologies", "/technologies", :style => "color:#000" %>
				</p>
				<div style="padding:0px 5px;">
					<% @teacher.user.technologies.each do |technology| %>
						<div class="profile-thumb-small" style="float:left;margin:0px 5px 0px 0px;overflow:hidden;">
							<%= link_to image_tag(technology.picture(:medium), :style => 'min-height:45px;min-width:45px;'), technology %>
						</div>
					<% end %>
					<div style="clear:both;"></div>
				</div>
			</section>
			
			<!-- Request Vouch -->
			<section class="info">
				<% if User.current && User.current.teacher == @teacher && User.current.teacher.skills.size > 0  %>
					<%= link_to "Verify Skills", '/requestvouch', :class => "action-button bg-green" %>
				<% end %>
			</section>
		</section><!-- End Sidebar -->
		
		
		<!-- START Checklist Content -->
		<section class="profile-content">
		
			<% if self.current_user != nil && @teacher == self.current_user.teacher %>
				<% if !self.current_user.got_started %>
					<section class="info panel" style="height:45px;background-color:#FBEFD5; border: 1px solid #ccc; border-radius: 0; margin-bottom: 10px">
						<a href="/get_started" style="display:block">
							<h4 style="margin: 10px 0px -5px 10px">
								Want a Rockstar profile? Click here to get started
							</h4>	
							<h5 style="margin: 10px 0px -5px 80px">
							</h5>
						</a>
					</section>
				<% end %>
			<% end %>

			<!-- Video -->
			<% if @connected || @guest || !@teacher.user.privacy["video"] %>
				<% unless @video.nil? %>
					<div class="profile-video panel">
						<%= @video.embed_code %>
					</div>
				<% end %>
				<section class="video-actions group">
					<% if self.current_user && self.current_user.teacher == @teacher %>
						<% unless @video == nil%>
							<a href="/me/profile/edit/upload-video" class="action-button edit-video bg-green">
							Edit Video
							</a>
						<% else %>
							<a href="/me/prof
							ile/edit/upload-video" class="action-button edit-video bg-green">
							Add a Video
							</a>
						<% end %>
					<% end %>
					<% if @teacher.videos.count > 1 %>
						<a href="/profile/<%= @teacher.url %>/videos" class="action-button edit-video bg-green" style="margin-right:10px;white-space:nowrap;width:auto;padding-left:10px;padding-right:10px;">
							<%= possesify(@teacher.user.first_name) %> Video Library
						</a>
					<% end %>
					<% unless @video == nil%>
						<!--ul class="stats">
							<li>
								<div class="count favorites">
								47
								</div>
							</li>
						</ul-->
					<% end %>
				</section>
			<% end %>

			<!-- START Education Section-->
			<!-- If Education is blank and you do own the profile, we encourage you to complete it.--> 
			<% if @teacher.educations.empty? && self.current_user.teacher == @teacher %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Where did you get that awesome brain of Yours? 
						<span style="font-size:16px; margin-left:5px">
							<% if self.current_user != nil && @teacher == self.current_user.teacher %>
							<a href="/me/profile/edit/education">  - - Update Education Details</a>
							<% end %>
						</span>
					</h3>
				</section>
				
			<!-- If Education is blank and you do not own the profile, you will see nothing. --> 
			<% elsif @teacher.educations.empty? %>
			
			<!-- If Educations aren't nil, no matter who you are, you will see them suckers. -->
			<% else %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Education
						<span style="font-size:16px; margin-left:5px">
							<% if self.current_user != nil && @teacher == self.current_user.teacher %>
							<a href="/me/profile/edit/education">  - - Edit</a>
							<% end %>
						</span>
					</h3><br />
					<% @teacher.educations.each do |edu| %>
						<p class="bold">
							<%= edu.school %>
						</p>
					
						<% unless edu.degree.nil? || edu.degree.empty? %>
							<p>
							<%= edu.degree %>, 
								
						<% end %>
						<% unless edu.concentrations.nil? || edu.concentrations.empty? %>
							<%= edu.concentrations %>	
							</p>
						<% end %>

						<p>
							<% if edu.current == true %>
								<% if edu.year.present?  %>
								<%= edu.start_year%> - <%= edu.year %> (expected)<br /><br />
								<% end %>
								
							<% else %>
								<% if !edu.year.present? %>
									<% else %>
									<% if !edu.start_year.present? %>
										<%= edu.year %><br />
										
									<% else %>
										<%= edu.start_year %> - <%= edu.year %><br /><br />
									<% end %>
									<% end %>
							<% end %>
						</p>
					<% end %>
				</section>
			<% end %>
			
			<!-- START Experience Section-->
			<!-- If Experiences are blank and you do own the profile, we encourage you to complete it.--> 
			<% if @teacher.experiences.empty? && self.current_user.teacher == @teacher %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Where did you get so good at this?
						<span style="font-size:16px; margin-left:5px">
							<% if self.current_user != nil && @teacher == self.current_user.teacher %>
							<a href="/me/profile/edit/experience"> - - Update Work Experience</a>
							<% end %>
						</span>
					</h3>
				</section><br />
				
			<!-- If Experiences are blank and you do not own the profile, you will see nothing. --> 
			<% elsif @teacher.experiences.empty? || self.current_user == @teacher %>
			
			<!-- If Experiences aren't nil, no matter who you are, you will see them suckers. -->
			<% else %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Experience
						<span style="font-size:16px; margin-left:5px">
							<% if self.current_user != nil && @teacher == self.current_user.teacher %>
							<a href="/me/profile/edit/experience"> - - Edit</a>
							<% end %>
						</span>
					</h3><br />

					<% @teacher.experiences.each do |experience| %>
						<p class="bold">
						<%= experience.position %><br />
						<%= experience.company %>	
						</p>
						<p>
						<% if experience.current == true %>
								<%= experience.startMonth.to_s+"/"+experience.startYear.to_s %> - Present
						<% else %>
							<% if experience.startMonth != nil %>
								<%= experience.startMonth.to_s+"/"+experience.startYear.to_s %>
							<% end %> -
							<% if experience.endMonth != nil %>
								<%= experience.endMonth.to_s+"/"+experience.endYear.to_s %>
							<% end %>
						<% end %>
						</p>
						<p>
						<%= experience.description %>
						</p><br />
					<% end %>
				</section>
			<% end %>

			<!-- START Skills Section-->
			<!-- If Skills are blank and you do own the profile, we encourage you to complete it.-->
			<% if @teacher.user.skill_groups.empty? && self.current_user.teacher == @teacher %>
				<section class="profile-info group">
					<h3 class="bottom-line">We heard you had skills...<span style="margin-left:10px;color:#F66C4C;" data-skillgroup-name="true"></span>
					<% if self.current_user != nil && @teacher == self.current_user.teacher %>
						<span style="font-size:16px"><a href="/me/profile/edit/skills"> - - Tell us what they are</a></span>
					<% end %>
					<span style="float:right;color:#F66C4C;" >Vouches</span>
					</h3>
				</section><br />
			
			<!-- If Skills are blank and you do not own the profile, you will see nothing. -->
			<% elsif @teacher.user.skill_groups.empty? %>
			
			<!-- If Skills aren't nil, no matter who you are, you will see them suckers. -->
			<% else %>
				<section class="profile-info group">
					<h3 class="bottom-line">Skills<span style="margin-left:10px;color:#F66C4C;" data-skillgroup-name="true"></span>
					<% if self.current_user != nil && @teacher == self.current_user.teacher %>
						<span style="font-size:16px"><a href="/me/profile/edit/skills"> - - Edit</a></span>
					<% end %>
					<span style="float:right;color:#F66C4C;" >Vouches</span>
					</h3> 

					<% @teacher.user.skill_groups.each do |skill_group| %>
						<% @teacher.skills.select{ |skill| skill.skill_group_id == skill_group.id }.each do |skill| %>
							<div style="border-bottom: 1px dashed #CFD4D5;padding-top:5px">
								<%= link_to skill.name, skill, :style => "font-size:15px" %>
								<% if @teacher.user.vouched_skills.collect(&:skill_id).count(skill.id) > 0 %>
									<%= @teacher.user.vouched_skills.collect(&:skill_id).count(skill.id) %>
								<% end %>
								<div style="float:right">
									<% @teacher.user.vouched_skills.select{|vouched_skill| vouched_skill.skill_id == skill.id && vouched_skill.voucher }[0..3].each do |vouched_skill| %>
										<% if vouched_skill.voucher.avatar? %>
											<%= link_to image_tag(vouched_skill.voucher.avatar(:tiny), :style => 'max-height:20 px;max-width:20px;'), "#{vouched_skill.voucher.teacher.url}" %>
										<% else %>
											<%= link_to image_tag("/assets/dl_icons/no_avatar_medium.jpg", :style => 'max-height:20px;max-width:20px;'), "#{vouched_skill.voucher.teacher.url}" %>
										<% end %>
									<% end %>
									<% if User.current && @teacher.user != User.current %>
										<%= link_to "+", { :controller => "vouches", :action => "addvouch", :user_id => @teacher.user_id, :skill_id => skill.id } %>
									<% end %>
								</div>
								<br />
							</div>
						<% end %>
					<% end %>
					</section>
					</br>
				<% end %>
			
			<!-- START Credential Section-->
			<!-- If Credentials are blank and you do own the profile, we encourage you to complete it.--> 
			<% if @teacher.credentials.empty? && self.current_user.teacher == @teacher %>
				<section class="profile-info group">
					<h3 class="bottom-line">
						Credentials
							<span style="font-size:16px; margin-left:5px">
								<% if self.current_user != nil && @teacher == self.current_user.teacher %>
									<a href="/me/profile/edit/credentials"> - - Update</a>
								<% end %>
							</span>
					</h3>
				</section><br />
				
			<!-- If Credentials are blank and you do not own the profile, you will see nothing. --> 	
			<% elsif @teacher.credentials.empty? %>

			<!-- If Credentials aren't nil, no matter who you are, you will see them suckers. -->
			<% else %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Credentials
						<span style="font-size:16px; margin-left:5px">
							<% if self.current_user != nil && @teacher == self.current_user.teacher %>
							<a href="/me/profile/edit/credentials"> - - Edit</a>
							<% end %>
						</span>
					</h3>
					<% @teacher.credentials.each do |credential| %>
						<p class="bold">  
						<%= credential.credentialType %>
						</p>
						<p>
						Subject: <%= credential.name %>
						</p>
						<p>
						Issued by: <%= credential.issuer %>
						</p>
						<% unless credential.state == ''  %>
							<p>
							Licensed in the state of: <%= credential.state %>
							</p>
						<% end %>
						</br>
					<% end %>
				</section>
			<% end %>
			
			<!-- START Presentation & Publications Section-->
			<!-- If Presentations are blank and you do own the profile, we encourage you to complete it.--> 
			<% if @teacher.presentations.empty?  && self.current_user.teacher == @teacher %>
				<section class="profile-info group">
					<h3 class="bottom-line">
						Show off your Press Here
							<span style="font-size:16px; margin-left:5px">
								<% if self.current_user != nil && @teacher == self.current_user.teacher %> 
									<a href="/me/profile/edit/presentations"> - - Update Presentation & Publications</a>
								<% end %>
							</span>
					</h3>
				</section><br />
				
			<!-- If Presentations are blank and you do not own the profile, you will see nothing. --> 		
			<% elsif @teacher.presentations.empty? %>
				
			<!-- If Presentations aren't nil, no matter who you are, you will see them suckers. -->	
			<% else %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Presentation & Publications
						<span style="font-size:16px; margin-left:5px">
							<% if self.current_user != nil && @teacher == self.current_user.teacher %> 
							<a href="/me/profile/edit/presentations"> - - Update</a>
							<% end %>
						</span>
					</h3>
					<% @teacher.presentations.each do |presentation| %>
						<p class="bold">
						<% unless presentation.url == nil || presentation.url == '' %>
							<%= link_to presentation.title, presentation.url %>
						<% else %>
							<%= presentation.title %>
						<% end %>
						</p>
						<p>
						<%= presentation.location %> | <%= presentation.date %>
						</p>
						<p>
						Authors: <%= link_to presentation.author, "#" %>
						</p>
						<p>
						<%= sanitize(presentation.description, :tags => %w(p a strong em span)) %>
						</p><br/ >
					<% end %>
				</section>
			<% end %>
			
			<!-- START Awards & Honors Section-->
			<!-- If Awards are blank and you do own the profile, we encourage you to complete it.--> 
			<% if @teacher.awards.empty?  && self.current_user.teacher == @teacher %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Flaunt your Trophies!
						<span style="font-size:16px; margin-left:5px">
						<% if self.current_user != nil && @teacher == self.current_user.teacher %>
						<a href="/me/profile/edit/awards"> - - Update Honors & Awards</a>
						<% end %>
						</span>
					</h3>
				</section><br />
			
			<!-- If Awards are blank and you do not own the profile, you will see nothing. -->
			<% elsif @teacher.awards.empty? %>
			
			<!-- If Awards aren't nil, no matter who you are, you will see them suckers. -->	
			<% else %>
				<section class="profile-info group">
					<h3 class="bottom-line">
					Honors & Awards
						<span style="font-size:16px; margin-left:5px">
						<% if self.current_user != nil && @teacher == self.current_user.teacher %>
						<a href="/me/profile/edit/awards"> - - Edit</a>
						<% end %>
						</span>
					</h3>
					<% @teacher.awards.each do |award| %>
					<p class="bold">
						<%= award.title %>
					</p>
					<p>
						<%= award.issuer %>
					</p>
					<p>
						<%= award.date %>
					</p>
					<p>
						<%= award.description %>
					</p></br>
					<% end %>
				</section>		
			<% end %>
			
			<!-- START Attachments Section -->
			<% if @connected || @guest || !@teacher.user.privacy["attachments"] %>
			
				<!-- If Attachments are blank and you do own the profile, we encourage you to complete it.--> 
				<% if @teacher.assets.empty?  && self.current_user.teacher == @teacher %>
					<section class="profile-info group">
						<h3 class="bottom-line">
						Are you feeling Attached?
							<span style="font-size:16px; margin-left:5px">
								<% if self.current_user != nil && @teacher == self.current_user.teacher %>
								<a href="/profileattachments">- - Upload your teaching documents</a>
								<% end %>
							</span>
						</h3>
					</section>
					
				<!-- If Attachments are blank and you do not own the profile, you will see nothing. -->
				<% elsif @teacher.assets.empty? %>
				
				<!-- If Attachments aren't nil, and they are not private, you will see them suckers. -->
				<% else %>
					<section class="profile-info group">
						<h3 class="bottom-line">
						Attachments
							<span style="font-size:16px; margin-left:5px">
								<% if self.current_user != nil && @teacher == self.current_user.teacher %>
								<a href="/profileattachments">- - Edit</a>
								<% end %>
							</span>
						</h3>

						<% if User.current.nil? %>
							<p>Please <%= link_to "login", '/login' %> to view profile attachments.</p>
						<% else %>
							<% @teacher.assets.each do |asset| %>
								<% if asset.assetType != 1 %>
									<p>
									<%= link_to image_tag('tioki/icons/attachment.png') + asset.name, asset.file.url %><br />
									<%= asset.description %>
									</p>
								<% end %>
							<% end %>
						<% end %>
					</section>
				<% end %>
			<% end %>
			
		</section> <!-- End Profile Content -->
	</section> <!-- End Profile -->
</section> <!-- End Main Content -->
